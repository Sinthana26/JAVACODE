import java.util.*;
public class  Main{
    public static void main(String[] args) {
         String input="Delhi is capital  the city of india ";
         String delim=" ";
         System.out.println("The input string is:"+" " +input);
        StringTokenizer st  = new StringTokenizer(input,delim);
        for(int i=0;i<input.length();i++){
            if(st.hasMoreTokens()){
            System.out.println("Word1:"+" "+st.nextToken()+","+" "+"Remaining words:"+st.countTokens());
          
        }
        
        }
    }
}
