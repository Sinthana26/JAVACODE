import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter the number:");
		int num=sc.nextInt();
		int a;
		int evenSum=0;
		int oddSum=0;
		while(num!=0){
		    a=num%10;
		    if(a%2==0){
		        a+=evenSum;
		       System.out.println("even sum:"+ evenSum);
		    }else if(a%2!=0){
		        a+=oddSum;
		       System.out.println("odd sum:" + oddSum);
		    }
		}
	}
	}
